<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.blanke.basepageindicator.MIUITitleIndicator
        android:id="@+id/activity_miuititle_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#99000099" />

    <com.blanke.basepageindicator.MIUITitleIndicator
        android:id="@+id/activity_miuititle_indicator2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#99000099" />

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_miuititle_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>